FC = x86_64-conda-linux-gnu-gfortran
CC = x86_64-conda-linux-gnu-cc

PKG_FFLAGS=-cpp -ffree-line-length-512 $(SHLIB_OPENMP_FFLAGS)

PKG_CXXFLAGS = $(SHLIB_OPENMP_CXXFLAGS)

PKG_LIBS = $(shell ${R_HOME}/bin/Rscript -e "RcppThread::LdFlags()") $(SHLIB_OPENMP_CFLAGS) $(SHLIB_OPENMP_CXXFLAGS)

CXX_STD = CXX11

all: $(SHLIB)

helpers.o: constants.o interface.o
mack.o: helpers.o interface.o
glm.o: helpers.o interface.o
